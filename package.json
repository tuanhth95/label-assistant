{
  "name": "label-assistant",
  "displayName": "Labeling Assistant",
  "description": "An extension to label data from a remote server.",
  "version": "0.0.1",
  "publisher": "NOUH",  
  "icon": "images/icon.png", 
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:label-assistant.start"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "labeling-assistant-container",
          "title": "Labeling Assistant",
          "icon": "images/icon.png"
        }
      ]
    },
    "views": {
      "labeling-assistant-container": [
        {
          "id": "labeling-assistant-view",
          "name": "Actions"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "label-assistant.start",
          "when": "view == labeling-assistant-view",
          "group": "navigation",
          "icon": "$(open-preview)"
        }
      ]
    },
    "commands": [
      {
        "command": "label-assistant.start",
        "title": "Start Labeling Session",
        "icon": "$(open-preview)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
