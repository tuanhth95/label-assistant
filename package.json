{
  "name": "label-assistant",
  "displayName": "Labeling Assistant",
  "description": "An extension to label data from a remote server.",
  "version": "0.0.1",
  "publisher": "NOUH",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:label-assistant.start",
    "onView:mainActionsView",
    "onView:dataTreeView",
    "onCustomEditor:labeling.customEditor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "labeling-assistant-container",
          "title": "Labeling Assistant",
          "icon": "images/icon.png"
        }
      ]
    },
    "views": {
      "labeling-assistant-container": [
        {
          "id": "mainActionsView",
          "name": "Main Actions",
          "type": "tree"
        },
        {
          "id": "dataTreeView",
          "name": "Data",
          "type": "tree"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "labeling.customEditor",
        "displayName": "Label Editor",
        "selector": [
          {
            "filenamePattern": "*.lbl"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "labeling.start",
        "title": "Start Labeling Process"
      },
      {
        "command": "labeling.showChart",
        "title": "Show Performance Chart"
      },
      {
        "command": "labeling.submitBatch",
        "title": "Submit Labeled Batch",
        "icon": "$(check-all)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "labeling.submitBatch",
          "when": "view == dataTreeView && viewItem == iteration",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "ws": "^8.18.3"
  }
}
